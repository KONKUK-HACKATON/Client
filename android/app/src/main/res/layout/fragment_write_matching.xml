<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".matching.write.WriteMatchingFragment">

    <ImageView
        android:id="@+id/iv_matching_add_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_chevron_left"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="65dp"
        android:layout_marginStart="36dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="매칭 게시글 작성하기"
        android:textFontWeight="600"
        android:textSize="16sp"
        android:fontFamily="@font/notosanskrregular"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="54dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/iv_write_matching_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_upload"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="29dp"/>


    <EditText
        android:id="@+id/et_write_matching_title"
        android:layout_width="310dp"
        android:layout_height="44dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="114dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/edit_text_matching_bulletin"
        android:hint="제목을 입력하세요."
        android:textSize="13sp"/>

    <EditText
        android:id="@+id/et_write_matching_contents"
        android:layout_width="310dp"
        android:layout_height="210dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_write_matching_title"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/edit_text_matching_bulletin"
        android:hint="내용을 입력하세요."
        android:gravity="start"
        android:textSize="13sp"/>
    
    <TextView
        android:layout_width="185dp"
        android:layout_height="22dp"
        android:text="게시글 종류를 선택해주세요."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_write_matching_contents"
        android:layout_marginTop="22dp"
        android:layout_marginStart="36dp"/>
    <FrameLayout
        android:id="@+id/fl_write_matching_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_write_matching_contents"
        android:layout_marginTop="52dp"
        android:layout_marginStart="36dp">
        <ImageView
            android:id="@+id/iv_write_btn_study"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_study"/>

        <ImageView
            android:id="@+id/iv_write_btn_study_sel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_study_sel"
            android:visibility="gone"
            />
    </FrameLayout>
    <FrameLayout
        android:id="@+id/fl_write_matching_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_write_matching_contents"
        android:layout_marginTop="52dp"
        android:layout_marginStart="92dp">
        <ImageView
            android:id="@+id/iv_write_btn_habit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_habit"/>
        <ImageView
            android:id="@+id/iv_write_btn_habit_sel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:src="@drawable/ic_habit_sel"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_write_matching_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_write_matching_contents"
        android:layout_marginTop="52dp"
        android:layout_marginStart="157dp">
        <ImageView
            android:id="@+id/iv_write_btn_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_country"/>

        <ImageView
            android:id="@+id/iv_write_btn_country_sel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:src="@drawable/ic_country_sel"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_write_matching_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_write_matching_contents"
        android:layout_marginTop="52dp"
        android:layout_marginStart="213dp">

        <ImageView
            android:id="@+id/iv_write_btn_free"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_free"/>

        <ImageView
            android:id="@+id/iv_write_btn_free_sel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:src="@drawable/ic_free_sel"/>

    </FrameLayout>






</androidx.constraintlayout.widget.ConstraintLayout>