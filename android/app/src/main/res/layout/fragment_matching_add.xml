<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".matching.add.MatchingAddFragment">

    <ImageView
        android:id="@+id/iv_matching_add_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_chevron_left"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="65dp"
        android:layout_marginStart="36dp"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="매칭 목록 추가하기"
        android:textFontWeight="600"
        android:textSize="16sp"
        android:fontFamily="@font/notosanskrregular"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="54dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/iv_matching_add_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="29dp"/>

    <TextView
        android:layout_width="308dp"
        android:layout_height="24dp"
        android:fontFamily="@font/pretendardregular"
        android:textFontWeight="800"
        android:textColor="#5E5E5E"
        android:text="닉네임"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="118dp"
        android:layout_marginStart="27dp"/>

    <EditText
        android:id="@+id/et_matching_add_nickname"
        android:layout_width="324dp"
        android:layout_height="49dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="26dp"
        android:layout_marginTop="147dp"
        android:background="@drawable/edit_text_bg"
        android:hint="매칭할 친구의 닉네임을 입력해주세요."
        android:textSize="13sp"/>

    <TextView
        android:layout_width="308dp"
        android:layout_height="24dp"
        android:fontFamily="@font/pretendardregular"
        android:textFontWeight="800"
        android:textColor="#5e5e5e"
        android:text="국가 이름"
        android:layout_marginTop="19dp"
        android:layout_marginStart="26dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_matching_add_nickname"/>

    <EditText
        android:id="@+id/et_matching_add_country"
        android:layout_width="324dp"
        android:layout_height="49dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_matching_add_nickname"
        android:layout_marginStart="26dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/edit_text_bg"
        android:hint="매칭할 친구의 국가를 입력해주세요."
        android:textSize="13sp"/>
    
    <TextView
        android:layout_width="308dp"
        android:layout_height="24dp"
        android:textFontWeight="800"
        android:fontFamily="@font/pretendardregular"
        android:textColor="#5e5e5e"
        android:text="단과대 및 학과"
        app:layout_constraintTop_toBottomOf="@id/et_matching_add_country"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="26dp"
        android:layout_marginTop="19dp"/>

    <Spinner
        android:id="@+id/spn_matching_add_college"
        android:layout_width="156px"
        android:layout_height="48px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_matching_add_country"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="195dp"
        />

    <Spinner
        android:id="@+id/spn_matching_add_department"
        android:layout_width="156px"
        android:layout_height="48px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_matching_add_country"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="192dp"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="27dp"
        />
    
    <TextView
        android:layout_width="308dp"
        android:layout_height="24dp"
        android:fontFamily="@font/pretendardregular"
        android:text="성별"
        android:textFontWeight="800"
        android:textColor="#5e5e5e"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="26dp"
        app:layout_constraintTop_toBottomOf="@id/et_matching_add_country"
        android:layout_marginTop="108dp"/>

    <Spinner
        android:id="@+id/spn_matching_add_gender"
        android:layout_width="156px"
        android:layout_height="48px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_matching_add_country"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="195dp"
        />







        


</androidx.constraintlayout.widget.ConstraintLayout>