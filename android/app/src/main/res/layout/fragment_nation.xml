<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".initialscreen.nationFragment">

    <ImageView
        android:id="@+id/iv_back_btn_nation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="342.11dp"
        />

    <ImageView
        android:id="@+id/iv_bar_progress_grey_nation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bar_progress_grey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="98dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="27dp"
        />

    <ImageView
        android:id="@+id/iv_bar_progress_color_nation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bar_progress_color"
        app:layout_constraintStart_toStartOf="@id/iv_bar_progress_grey_nation"
        app:layout_constraintTop_toTopOf="@id/iv_bar_progress_grey_nation"
        app:layout_constraintBottom_toBottomOf="@id/iv_bar_progress_grey_nation"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="국가와\n사용 언어를 적어주세요."
        android:textSize="24sp"
        android:fontFamily="@font/pretendardregular"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="23dp"
        android:layout_marginTop="203dp"
        android:layout_marginBottom="551dp"
        />

    <ImageView
        android:id="@+id/iv_next_btn_nation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_next"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="690dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="국가 이름"
        android:textColor="#5E5E5E"
        android:textSize="20sp"
        android:fontFamily="@font/pretendardregular"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="26dp"
        android:layout_marginTop="333dp"
        android:layout_marginBottom="455dp"
        />

    <EditText
        android:id="@+id/et_nation_input"
        android:layout_width="324dp"
        android:layout_height="49dp"
        android:background="@drawable/edit_text_matching_bulletin"
        android:hint="국가 이름을 입력해주세요."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="362dp"
        android:paddingStart="16dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingEnd="143dp"
        android:textSize="14sp"
        android:fontFamily="@font/pretendardregular"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사용 언어 (한국어 제외)"
        android:textColor="#5E5E5E"
        android:textSize="20sp"
        android:fontFamily="@font/pretendardregular"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="26dp"
        android:layout_marginTop="425dp"
        android:layout_marginBottom="363dp"
        />

    <EditText
        android:id="@+id/et_language_input"
        android:layout_width="324dp"
        android:layout_height="49dp"
        android:background="@drawable/edit_text_matching_bulletin"
        android:hint="사용 언어를 입력해주세요."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="454dp"
        android:paddingStart="16dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingEnd="143dp"
        android:textSize="14sp"
        android:fontFamily="@font/pretendardregular"/>









</androidx.constraintlayout.widget.ConstraintLayout>