<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".help.MapFragment"

    >

    <TextView
        android:id="@+id/tv_school_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="61dp"
        android:fontFamily="@font/pretendardregular"
        android:text="학교 지도"
        android:textFontWeight="700"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_school_map_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/pretendardregular"
        android:text="건국대학교 내 강의실과 실험실 등\n건물 위치 및 지도를 한 번에 확인해요."
        android:textColor="#366943"
        android:textFontWeight="600"
        app:layout_constraintStart_toStartOf="@id/tv_school_map"
        app:layout_constraintTop_toBottomOf="@id/tv_school_map" />

    <View
        android:id="@+id/view_map"
        android:layout_width="337dp"
        android:layout_height="328dp"
        android:layout_marginTop="23dp"
        android:paddingStart="19dp"
        android:paddingEnd="19dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_school_map_description"
        />


</androidx.constraintlayout.widget.ConstraintLayout>